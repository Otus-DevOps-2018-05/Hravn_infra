{
    "variables": {
        "proj_id" : "lateral-diagram-208309",
        "src_img" : "ubuntu-1604-lts",
        "machine_t" : "f1-micro",
        "decription": "TEST",
        "disk_size": "10",
        "disk_type": "pd-standard",
        "network": "default",
        "tags": "redis"
    },
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `proj_id`}}",
            "image_name": "reddit-full",
            "image_family": "reddit-base",
            "source_image_family": "{{user `src_img`}}",
            "zone": "europe-west1-b",
            "ssh_username": "appuser",
            "machine_type": "{{user `machine_t`}}",
            "image_description": "{{user `decription`}}",
            "disk_size": "{{user `disk_size`}}",
            "disk_type": "{{user `disk_type`}}",
            "network": "{{user `network`}}",
            "tags": "{{user `tags`}}"
        }
    ],
    "provisioners": [
	{
	    "type": "shell",
	    "script": "scripts/install_ruby.sh",
	    "execute_command": "sudo {{.Path}}"
	},
	{
            "type": "shell",
            "script": "scripts/install_mongodb.sh",
            "execute_command": "sudo {{.Path}}"
        },
	{
            "type": "shell",
            "script": "scripts/deploy.sh",
            "execute_command": "{{.Path}}"
        },
	{
            "type": "file",
            "source": "files/reddit.service",
            "destination": "/tmp/reddit.service"
	},
	    {
	      "type": "shell",
	      "inline": "sudo mv /tmp/reddit.service /etc/systemd/system/"
	    },
	    {
	      "type": "shell",
	      "inline": "sudo chown root:root /etc/systemd/system/reddit.service"
	    },
	    {
	      "type": "shell",
	      "inline": "sudo systemctl enable reddit.service"
	    }
    ]
}